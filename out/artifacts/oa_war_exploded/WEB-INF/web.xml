<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--    查看部门列表-->
    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>com.lzh.oa.test</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/dept/list</url-pattern>
    </servlet-mapping>

<!--查看部门详细信息-->
    <servlet>
        <servlet-name>detail</servlet-name>
        <servlet-class>com.lzh.oa.detail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>detail</servlet-name>
        <url-pattern>/dept/detail</url-pattern>
    </servlet-mapping>
<!--这个是删除的时候的-->
    <servlet>
        <servlet-name>del</servlet-name>
        <servlet-class>com.lzh.oa.del</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>del</servlet-name>
        <url-pattern>/dept/del</url-pattern>
    </servlet-mapping>

    <!--这个是添加的时候的-->
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>com.lzh.oa.add</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/dept/add</url-pattern>
    </servlet-mapping>


    <!--这个是修改的时候的-->
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>com.lzh.oa.update</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/dept/update</url-pattern>
    </servlet-mapping>

    <!--这个是中介的时候的-->
    <servlet>
        <servlet-name>update2</servlet-name>
        <servlet-class>com.lzh.oa.update2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update2</servlet-name>
        <url-pattern>/dept/update2</url-pattern>
    </servlet-mapping>


</web-app>